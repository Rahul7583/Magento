<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Rp_Category>
			<version>1.0.0</version>
		</Rp_Category>
	</modules>
	<admin>
		<routers>
			<category>
				<use>admin</use>
				<args>
					<module>Rp_Category</module>
                    <frontName>category</frontName>
				</args>
			</category>
		</routers>
	</admin>
	<adminhtml>
		<menu>
	        <category translate="title" module="category">
	            <title>category</title>
	            <sort_order>40</sort_order>
	            <children>
	                <manage translate="title" module="category">
	                    <title>Manage categorys</title>
	                    <action>category/adminhtml_category/</action>
	                    <sort_order>0</sort_order>
	                </manage>
	            </children>
	         </category>
	     </menu>
	</adminhtml>
	<global>
		<helpers>
            <category>
                <class>Rp_Category_Helper</class>
            </category>
        </helpers>
        <blocks>
            <category>
                <class>Rp_Category_Block</class>
            </category>
        </blocks>
        <models>
            <category>
                <class>Rp_Category_Model</class>
                <resourceModel>category_resource</resourceModel>
            </category>
            <category_resource>
                <class>Rp_Category_Model_Resource</class>
                <deprecatedNode>category_mysql4</deprecatedNode>
                <entities>
                    <category>
                        <table>category</table>
                    </category>
                </entities>
            </category_resource>
        </models>
        <resources>
        	<category_setup>
        		<setup>
        			<module>Rp_Category</module>
        		</setup>
        		<connection>
        			<use>core_setup</use>
        		</connection>
        	</category_setup>
        	<category_write>
        		<connection>
        			<use>core_write</use>
        		</connection>
        	</category_write>
        	<category_read>
        		<connection>
        			<use>core_read</use>
        		</connection>
        	</category_read>
        </resources>
	</global>	
</config>